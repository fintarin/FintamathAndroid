<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Fintamath" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background_bar</item>
        <item name="colorOnPrimary">@color/text_main</item>
        <item name="popupMenuStyle">@style/Theme.Fintamath.PopupMenu</item>
        <item name="android:statusBarColor">@color/background_bar</item>
        <item name="android:navigationBarColor">@color/background_keyboard</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="Theme.Fintamath.PopupMenu" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/background_menu</item>
    </style>
</resources>